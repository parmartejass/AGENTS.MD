{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agents-md.local/schemas/change-record.schema.json",
  "title": "Change Record",
  "description": "Structured evidence for governance checks and bugfix root-cause traceability.",
  "type": "object",
  "required": [
    "change_id",
    "change_type",
    "summary",
    "verification_commands",
    "invariants",
    "witnesses",
    "ssot_owner_paths"
  ],
  "properties": {
    "change_id": {
      "type": "string",
      "minLength": 1
    },
    "change_type": {
      "type": "string",
      "enum": [
        "bugfix",
        "regression",
        "behavior_change",
        "feature",
        "refactor",
        "docs",
        "formatting",
        "chore"
      ]
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "symptom_location": {
      "type": "string",
      "minLength": 1
    },
    "authority_fix_point": {
      "type": "string",
      "minLength": 1
    },
    "root_cause_statement": {
      "type": "string",
      "minLength": 1
    },
    "class_of_errors_prevented": {
      "type": "string",
      "minLength": 1
    },
    "residual_risk": {
      "type": "string"
    },
    "mre": {
      "type": "object",
      "required": [
        "fixture_path",
        "pre_fix_failure_signal",
        "post_fix_pass_signal"
      ],
      "properties": {
        "fixture_path": {
          "type": "string",
          "minLength": 1
        },
        "pre_fix_failure_signal": {
          "type": "string",
          "minLength": 1
        },
        "post_fix_pass_signal": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "tests": {
      "type": "object",
      "required": [
        "regression",
        "disconfirming",
        "failure_path"
      ],
      "properties": {
        "regression": {
          "type": "string",
          "minLength": 1
        },
        "disconfirming": {
          "type": "string",
          "minLength": 1
        },
        "failure_path": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "verification_commands": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "invariants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "witnesses": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "invariant_id",
          "signal",
          "record_location",
          "pass_criteria"
        ],
        "properties": {
          "invariant_id": {
            "type": "string",
            "minLength": 1
          },
          "signal": {
            "type": "string",
            "minLength": 1
          },
          "record_location": {
            "type": "string",
            "minLength": 1
          },
          "pass_criteria": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": true
      }
    },
    "ssot_owner_paths": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "change_type": {
            "enum": [
              "bugfix",
              "regression"
            ]
          }
        },
        "required": [
          "change_type"
        ]
      },
      "then": {
        "required": [
          "symptom_location",
          "authority_fix_point",
          "root_cause_statement",
          "class_of_errors_prevented",
          "mre",
          "tests"
        ]
      }
    }
  ],
  "additionalProperties": true
}
